<UserControl x:Class="NewCal.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewCal.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- 背景渐变 -->
    <Grid >
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#f0f8ff" Offset="0"/>
                <GradientStop Color="#d0eaff" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- 居中布局 -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- 欢迎文字 -->
            <TextBlock Text="欢迎使用" 
                       FontSize="48" FontWeight="Bold" Foreground="#2c3e50"
                       HorizontalAlignment="Center" Margin="0,0,0,30" />

            <!-- 自定义按钮样式 -->
            <Button Content="关于页面" Margin="0,0,0,30" Width="150" Height="40" Command="{Binding NavigateCommand}" CommandParameter="AboutView"/>

            <Button Content="打开计算器" Margin="0,0,0,30" Width="150" Height="40" Command="{Binding NavigateCommand}" CommandParameter="CalculatorView"
                     />
        </StackPanel>
    </Grid>
</UserControl>
